monitorv2 {
  output =
  mode = highrr
  position = auto
  scale = auto
  bitdepth = 10
  # cm = hdr
  supports_wide_color = 1
  supports_hdr = 1
  # sdr_min_luminance = 0.005
  # sdrbrightness = 1.2
  # sdrsaturation = 1.3
  # vrr = 1
}

$config = ~/.config/hypr/config

source = $config/permissions.conf
source = $config/execs.conf
source = $config/plugins.conf
source = $config/binds.conf
source = $config/rules.conf
source = $config/gestures.conf
source = $config/animations.conf

input {
  kb_layout = us
  kb_variant =
  kb_model =
  kb_options =
  kb_rules =

  numlock_by_default = true

  follow_mouse = 1

  touchpad {
    natural_scroll = yes
  }

  sensitivity = 0 # -1.0 to 1.0, 0 means no modification.
}

general {
  gaps_in = 3
  gaps_out = 5
  border_size = 0
  allow_tearing = false
  resize_on_border = false
  layout = dwindle
}

decoration {
  rounding = 10
  rounding_power = 4.0
  # dim_inactive = true
  shadow {
    range = 4
    render_power = 3
  }

  blur {
    enabled = true
    size = 2
    passes = 5
    brightness = 0.45
    noise = 0.02
    contrast = 1.0
    vibrancy = 0.2
    ignore_opacity = true
    popups = true
    special = false
    xray = false
    }
}

# debug:disable_logs = false

dwindle {
  smart_split = true
  single_window_aspect_ratio = 4 3 # For 16:9 display.
}

misc {
  vfr = true
  force_default_wallpaper = 0
  animate_manual_resizes = true
  disable_hyprland_logo = true
  focus_on_activate = false
  font_family = {{ .theme.settings.font.system.regular }}
  mouse_move_enables_dpms = true
  key_press_enables_dpms = true
  new_window_takes_over_fullscreen = 1
}

cursor {
  inactive_timeout =  5
}

xwayland {
  force_zero_scaling = true
}

ecosystem {
  enforce_permissions = true
}
